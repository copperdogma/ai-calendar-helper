# ============================================================================== 
# Production Environment Variables Template
# Copy this file to `.env.production` (DO NOT commit real secrets)
# Then run:
#   fly secrets import < .env.production  --app ai-calendar-helper
# ==============================================================================

# Environment
NODE_ENV=production

# Application URLs
NEXT_PUBLIC_APP_URL=https://ai-calendar-helper.fly.dev
NEXTAUTH_URL=https://ai-calendar-helper.fly.dev

# --- Authentication -----------------------------------------------------------
# Generate: openssl rand -base64 32
NEXTAUTH_SECRET=YOUR_NEXTAUTH_SECRET
AUTH_TRUST_HOST=true

# Google OAuth
GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID"
GOOGLE_CLIENT_SECRET="YOUR_GOOGLE_CLIENT_SECRET"

# --- OpenAI -------------------------------------------------------------------
OPENAI_API_KEY="YOUR_OPENAI_API_KEY"
# OPENAI_ORG="YOUR_OPENAI_ORG_ID"   # optional

# --- Database -----------------------------------------------------------------
# DATABASE_URL will be provided automatically by Fly Postgres attachment.
# If you're testing locally against prod DB, you can uncomment and set:
# DATABASE_URL="postgres://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# --- Redis (optional) ----------------------------------------------------------
# REDIS_URL="redis://username:password@host:6379"
# ENABLE_REDIS_RATE_LIMITING="true"

# --- Rate Limiting -------------------------------------------------------------
RATE_LIMIT_REGISTER_MAX_ATTEMPTS=5
RATE_LIMIT_REGISTER_WINDOW_SECONDS=3600

# --- Logging -------------------------------------------------------------------
LOG_LEVEL=info 

# --- Host Trust (NextAuth) -----------------------------------------------------
AUTH_TRUST_HOST=true